{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": ".", // 公共路径
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./build",
    "types": [
      "node"
    ],
    "declaration": true, // 是否生成声明文件
    "declarationDir": "build/type",// 声明文件打包的位置
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
